{
  "name": "cleric",
  "version": "0.0.1",
  "description": "Experimental monorepo",
  "private": true,
  "scripts": {
    "ws": "run.env ./scripts/workspace.sh",
    "git:c": "run.env ./scripts/git-commit.sh",
    "git:cp": "run.env ./scripts/git-commit-and-push.sh",
    "lint:fix": "eslint --fix --ext .ts --ext .tsx --ext .js --ext .jsx ."
  },
  "workspaces": {
    "packages": [
      "packages/*"
    ],
    "nohoist": [
      "**/gts"
    ]
  },
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "@types/node": "^10.0.3",
    "eslint-plugin-jest": "^23.8.2",
    "gts": "^2.0.0-alpha.8",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^10.0.9",
    "ts-jest": "^25.2.0",
    "typescript": "~3.8.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix"
    ]
  }
}