{
  "name": "cleric",
  "version": "0.0.1",
  "description": "Experimental monorepo",
  "private": true,
  "scripts": {
    "ws": "run.env ./scripts/workspace.sh",
    "git:c": "run.env ./scripts/git-commit.sh",
    "git:cp": "run.env ./scripts/git-commit-and-push.sh",
    "lint:fix": "run.env ./scripts/clang-format-all.sh ."
  },
  "workspaces": [
    "packages/*"
  ],
  "license": "UNLICENSED",
  "devDependencies": {
    "@types/jest": "^25.1.3",
    "husky": "^4.2.3",
    "jest": "^25.1.0",
    "lerna": "^3.19.0",
    "lint-staged": "^10.0.9",
    "ts-jest": "^25.2.0",
    "typescript": "^3.7.5"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": "clang-format -i"
  }
}