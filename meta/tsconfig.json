{
  "extends": "@cleric/tsconfig/base.json",
  "references": [
    {
      "path": "../packages/common"
    },
    {
      "path": "../packages/tsconfig"
    }
  ],
  "include": [
    "src/**/*",
    "src/**/*.json"
  ],
  "exclude": [
    "src/**/*.spec.ts"
  ],
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "tsBuildInfoFile": "dist/.tsbuildinfo"
  }
}