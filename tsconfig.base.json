{
    "compilerOptions": {
        "baseUrl": "./",
        "paths": {
            "@cleric/*": [
                "./packages/*"
            ]
        },
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "declaration": false,
        "noImplicitAny": false,
        "noImplicitUseStrict": false,
        "removeComments": true,
        "importHelpers": true,
        "resolveJsonModule": true,
        "esModuleInterop": true,
        "noEmitHelpers": true,
        "preserveConstEnums": true,
        "suppressImplicitAnyIndexErrors": true
    }
}